<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="3dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:elevation="4dp">

    <RelativeLayout


        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/purple_500" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/card_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-medium"
                android:text="Hiệp Khách Giang Hồ"

                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/story_author_and_chap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Chương: 71 - T/g: Bắc Nam" />

            <TextView
                android:id="@+id/story_about_categories"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="The loai: Kiem Hiep" />

            <TextView
                android:id="@+id/story_update_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Ngày cập nhật: 20/04/2021" />


        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
